            <FlowDocument>
                <Paragraph>
                    <Run Text=".NET (CSCD 371)"/>
                </Paragraph>
                <Paragraph>
                    <Run Text="File System Watcher Application"/>
                </Paragraph>
                <Paragraph>
                    <Run Text="Version: 1"/>
                </Paragraph>
                <Paragraph>
                    <Run Text="Program helps you watch activity of specific file(s) once given specified path."/>
                </Paragraph>
